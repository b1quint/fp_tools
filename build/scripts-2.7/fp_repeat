#!/Users/Bruno/anaconda/envs/astroconda/bin/python

import argparse
import fp_tools

# Parse command line arguments
parser = argparse.ArgumentParser(description="Repeats a data-cube [N] times.")

parser.add_argument(
    'input_cube', type=str, nargs=1,
    help="Input cube.")

parser.add_argument(
    'output_cube', type=str, nargs=1,
    help="Output cube.")

parser.add_argument(
    'n_before', type=int, nargs=1,
    help="Add 'n' copies of the cube in its beginning (affects header).")

parser.add_argument(
    'n_after', type=int, nargs=1,
    help="Add 'n' copies of the cube in its end (affects header).")

args = parser.parse_args()

fp_repeat = fp_tools.tools_3d.z_repeat()
fp_repeat(args.input_cube, args.output_cube, n_after=args.n_after,
          n_before=args.n_before)